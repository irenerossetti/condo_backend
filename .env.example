# Configuración de Django
DEBUG=1
SECRET_KEY=change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de datos (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/condominio_db

# MercadoPago (obtén tus credenciales en https://www.mercadopago.com.ar/developers)
MERCADOPAGO_ACCESS_TOKEN=TEST-xxxxxxxx
MERCADOPAGO_PUBLIC_KEY=TEST-xxxxxxxx

# OpenRouter API para reconocimiento de placas (opcional)
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxx
SITE_URL=https://misitiodecondominio.com
SITE_NAME=Smart Condominium

# Redis configuration (for WebSocket chat)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Firebase configuration (for push notifications)
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
